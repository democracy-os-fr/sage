{
  "name": "roots/sage",
  "type": "drupal-theme",
  "license": "MIT",
  "description": "Drupal starter theme with a modern development workflow",
  "homepage": "https://www.drupal.org/project/bootstrap",
  "authors": [
    {
      "name": "moustachu",
      "email": "moustachu@democracyos.eu",
      "homepage": "https://github.com/moustachu"
    }
  ],
  "keywords": [
    "drupal"
  ],
  "support": {
    "issues": "https://github.com/democracy-os-fr/sage/issues"
  },
  "autoload": {
    "psr-4": {
      "Roots\\Sage\\": "src/lib/Sage/"
    }
  },
  "require": {
    "php": ">=5.6.4",
    "composer/installers": "~1.0",
    "illuminate/view": "~5.4.0",
    "illuminate/config": "~5.4.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^2.5.1"
  },
  "scripts": {
    "test": [
      "phpcs"
    ],
    "post-create-project-cmd": [
        "Roots\\Sage\\PostCreateProject::updateHeaders",
        "Roots\\Sage\\PostCreateProject::selectFramework",
        "Roots\\Sage\\PostCreateProject::addFontAwesome",
        "Roots\\Sage\\PostCreateProject::buildOptions"
    ]
  }
}
