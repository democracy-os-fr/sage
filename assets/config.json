{
  "entry": {
    "main": [
      "./scripts/main.js",
      "./styles/main.scss"
    ]
  },
  "watch": [
    "src/**/*.php",
    "templates/**/*.twig"
  ],
  "publicPath": "/themes/contrib/sage",
  "devUrl": "http://d8.local.dev:8080",
  "proxyUrl": "http://localhost:3000",
  "cacheBusting": "[name]_[hash:8]",
  "browserSyncOptions": {
    "reloadOnRestart": true,
    "open": false,
    "watchOptions": {
        "ignoreInitial": false
    },
    "ghostMode": false,
    "logLevel": "debug"
  }
}
