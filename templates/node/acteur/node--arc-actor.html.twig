{% extends "node.html.twig" %}
{% set container = theme.settings.fluid_container ? 'container-fluid' : 'container' %}
{# Content #}
{% block content %}

<div class="container-xs text-center">

  <div class="page-header text-left">
    <a href="/acteurs" class="btn btn-link btn-back-to-list">
      <i class="fa fa-arrow-left"></i>
      &emsp;
      Revenir Ã  la liste des acteurs
    </a>
  </div>



  <div class="panel panel-default">
    {% if content.field_image|field_target_entity %}
      {{ content.field_image|field_value }}
    {% else %}
      <div class="font-avatar">
        {{ label|field_value[0]['#context']['value'][:1]|upper }}
      </div>
    {% endif %}

    <h3 class="alt">
    {% if content.field_link_social_web|field_value %}
      <a href="{{content.field_link_social_web|field_value[0]['#title']}}" target="_blank">{{ label }}</a>
    {% else %}
      {{ label }}
    {% endif %}
    {% if user.hasPermission('administer nodes') %}
      <a class="btn btn-sm btn-link btn-link-info" href="{{ url('entity.node.edit_form',{'node': node.id}) }}">
        <i class="fa fa-2x fa-fw fa-pencil-square-o"></i>
      </a>
    {% endif %}
    </h3>

    <div class="social pad-bottom">
      {% if content.field_link_social_web|field_value %}
        <a href="{{content.field_link_social_web|field_value[0]['#title']}}" target="_blank"
          title="{{content.field_link_social_web|field_label}}">
          <i class="fa fa-lg fa-fw fa-link"></i>
        </a>
      {% endif %}
      {% if content.field_link_social_twitter|field_value %}
        <a href="{{content.field_link_social_twitter|field_value[0]['#url']}}" target="_blank"
          title="{{content.field_link_social_twitter|field_label}} : {{content.field_link_social_twitter|field_value[0]['#title']}}">
          <i class="fa fa-lg fa-fw fa-twitter"></i>
        </a>
      {% endif %}
      {% if content.field_link_social_facebook|field_value %}
        <a href="{{content.field_link_social_facebook|field_value[0]['#url']}}" target="_blank"
          title="{{content.field_link_social_facebook|field_label}} : {{content.field_link_social_facebook|field_value[0]['#title']}}">
          <i class="fa fa-lg fa-fw fa-facebook"></i>
        </a>
      {% endif %}
      {% if content.field_link_social_youtube|field_value %}
        <a href="{{content.field_link_social_youtube|field_value[0]['#url']}}" target="_blank"
          title="{{content.field_link_social_youtube|field_label}} : {{content.field_link_social_youtube|field_value[0]['#title']}}">
          <i class="fa fa-lg fa-fw fa-youtube-play"></i>
        </a>
      {% endif %}
    </div>

    <div class="content pad-bottom">
      {{ content.body }}
    </div>

    <div class="list-group-item">
      {{ content.field_type_tags }}
    </div>

  </div> <!-- panel -->

  {% if user.hasPermission('administer nodes') %}
    <div class="well text-left">
      {{ content.import_id }}
      {{ content.field_geofield }}
      {{ content.field_faicon }}
    </div>
  {% endif %}

</div>

{% endblock %}
