{#
/**
 * @file
 * Default theme implementation of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @ingroup templates
 *
 * @see template_preprocess_views_exposed_form()
 */
#}

{{ attach_library('sage/views-exposed-form') }}
{{ attach_library('sage/libraries.jquery.icheck.line') }}

{% if q is not empty %}
  {#
    This ensures that, if clean URLs are off, the 'q' is added first,
    as a hidden form element, so that it shows up first in the POST URL.
  #}
  {{ q }}
{% endif %}
  <div class="form-horizontal">
    <div class="form-body">

      {#
        field_filter_rent_type_value
        field_filter_availability_value
        combine
      #}

      <div class="form-group">
        <!-- <div class="col-sm-offset-2 col-sm-10 form-exposed-group"> -->
        <div class="col-sm-12 form-exposed-group">
          <div class="form-exposed-group-inner">
            {{ form.combine }}
          </div>
        </div>
      </div>
      <div class="form-group">
        <!-- <label class="col-sm-2 control-label alt-light">filtres</label> -->
        <div class="col-sm-12 form-group form-exposed-group">
          {{ form.type }}
        </div>
      </div>
      <div class="form-group">
        <!-- <div class="col-sm-offset-2 col-sm-10 form-exposed-group"> -->
        <div class="col-sm-12 form-exposed-group">
          <div class="form-exposed-group-inner text-left">
            {{ form.actions }}
          </div>
        </div>
      </div>

    </div>
  </div>
